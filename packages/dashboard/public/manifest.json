  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "tel",
      "url": "/dialer?number=%s"
    },
    {
      "protocol": "sms",
      "url": "/inbox/sms?number=%s"
    }
  ]
