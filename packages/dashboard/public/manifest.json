{
  "name": "VoxLink - AI-Powered Business Communication Platform",
  "short_name": "VoxLink",
  "description": "Comprehensive AI-powered voice communication platform with unified messaging, analytics, and advanced dialer capabilities",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2563EB",
  "orientation": "any",
  "lang": "en-US",
