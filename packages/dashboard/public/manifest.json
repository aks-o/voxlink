      "description": "View main dashboard with key metrics",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Inbox",
      "short_name": "Messages",
      "description": "Access unified inbox and messages",
      "url": "/inbox",
      "icons": [
        {
          "src": "/icons/shortcut-inbox.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "AI Agents",
      "short_name": "AI Agents",
      "description": "Manage AI voice agents",
      "url": "/ai-voice-agent/agents",
      "icons": [
        {
          "src": "/icons/shortcut-ai.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Call Logs",
